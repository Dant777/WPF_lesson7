<Window x:Class="WPF_Lesson7.EditDepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lesson7"
        mc:Ignorable="d"
         Title="Add Department" Loaded="Window_Loaded" Height="150" Width="205">
    <Grid x:Name="addStackPanel">
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtAddNameDep" HorizontalAlignment="Left" Height="25" Margin="10,30,0,0"
                 TextWrapping="Wrap"  VerticalAlignment="Top" Width="178"/>

        <Button Name="btnAddOK" Content="OK" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="75" Click="BtnAddOK_Click"/>
        <Button Name="btnAddCancel" Content="Cancel" HorizontalAlignment="Left" Margin="113,75,0,0" VerticalAlignment="Top" Width="75" Click="BtnAddCancel_Click"/>
    </Grid>
</Window>
